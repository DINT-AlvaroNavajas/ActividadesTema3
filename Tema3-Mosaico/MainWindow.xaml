<Window x:Class="Tema3_Mosaico.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tema3_Mosaico"
        mc:Ignorable="d"
        Title="Mosaico" Height="600" Width="800" MinHeight="500" MinWidth="500">
    <DockPanel LastChildFill="True">
        <TextBlock DockPanel.Dock="Top" Height="100" Background="#FFB700FF"></TextBlock>
        <TextBlock DockPanel.Dock="Left" Width="100" Background="#FFB700FF"></TextBlock>
        <TextBlock DockPanel.Dock="Bottom" Height="100" Background="#FF00BD03"></TextBlock>
        <TextBlock DockPanel.Dock="Right" Width="100" Background="#FF00BD03"></TextBlock>
        <DockPanel LastChildFill="True">
            <TextBlock Background="DarkOrange"  Width="100" DockPanel.Dock="Left"></TextBlock>
            <TextBlock Background="DarkOrange"  Height="100" DockPanel.Dock="Bottom"></TextBlock>
            <TextBlock Background="HotPink" Height="100" DockPanel.Dock="Top"></TextBlock>
            <TextBlock Background="HotPink" Width="100" DockPanel.Dock="Right"></TextBlock>
            <TextBlock Background="Black"></TextBlock>
        </DockPanel>
            
    </DockPanel>

</Window>
